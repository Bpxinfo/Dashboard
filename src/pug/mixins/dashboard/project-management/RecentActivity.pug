mixin RecentActivityTimeline
  -
    var timelineItems = [
      {
        date: '01 MARCH, 2023',
        time: '10:30 AM',
        icon: 'fa-solid fa-chess',
        title: 'Milestone 1',
        tasker: 'Shantinon Mekalan',
        content: 'Collection and analysis of baseline data – patient chart review 2023'
      },
      {
        date: '05 JUNE, 2023',
        time: '12:30 AM',
        icon: 'fa-solid fa-dove',
        title: 'Milestone 2',
        tasker: 'Bookworm22',
        content: 'Contract Sign Off'
      },
      {
        date: '15 JULY, 2023',
        time: '2:30 AM',
        icon: 'fa-solid fa-dungeon',
        title: 'Milestone 3',
        tasker: 'Sharuka Nijibum',
        content: 'Development of educational materials, including podcasts – to be distributed to ACCC members (2023-2024)'
      },
      {
        date: '15 AUGUST, 2023',
        time: '2:30 AM',
        icon: 'fa-solid fa-dungeon',
        title: 'Milestone 4',
        tasker: 'Sharuka Nijibum',
        content: 'Patient and provider survey (2023)'
      },
    ]
  .timeline-vertical.timeline-with-details
    each item,index in timelineItems
      .timeline-item.position-relative
        .row.g-md-3
          .col-12.col-md-auto.d-flex
            .timeline-item-date.order-1.order-md-0.me-md-4
              p.fs-10.fw-semibold.text-body-tertiary.text-opacity-85.text-end=item.date
                br.d-none.d-md-block
                |  #{item.time}
            .timeline-item-bar.position-md-relative.me-3.me-md-0
              .icon-item.icon-item-sm.rounded-7.shadow-none.bg-primary-subtle
                span(class=item.icon).text-primary-dark.fs-10
              if index !== timelineItems.length - 1
                span.timeline-bar.border-end.border-dashed
          .col
            .timeline-item-content.ps-6.ps-md-3
              h5.fs-9.lh-sm=item.title
              p.fs-9 by 
                a(href="#!").fw-semibold=item.tasker
              p.fs-9.text-body-secondary(class=`${index !== timelineItems.length - 1 ? 'mb-5': 'mb-0'}`)=item.content

mixin RecentActivityCard
  .card.h-100
    .card-body
      .card-title.mb-1
        h3.text-body-emphasis Activity
      p.text-body-tertiary.mb-4 Recent activity across all projects
      +RecentActivityTimeline